@model LIbrary.ViewModels.AddViewModel

@{
    ViewData["Title"] = "Create Author";
}
@section Styles {
    <link href="~/css/Add.css" rel="stylesheet" type="text/css" />
}



<div class="container">
    <div class="form-container">
        <form action="Add" class="libForm" method="post">
            <p>Enter Author Details</p>
            <div class="form-group">
                <label asp-for="Author.Name">Name: </label>
                <input type="text" asp-for="Author.Name" class="form-control">
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="form-gruop">
                <label asp-for="Author.Age">Age: </label>
                <input type="number" asp-for="Author.Age" class="form-control">
                <span asp-validation-for="Author.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Book">Book: </label>
                <input list="books" name="BookName" id="Book" class="selection">
                <datalist id="books">
                    @foreach (var book in Model.Books)
                    {
                        <option value="@book.Title">@book.Title</option>
                    }
                </datalist>
            </div>

            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>

